rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Documents: photos, certificates, audio, video files
    // Path: documents/{familyId}/{personId}/{filename}
    match /documents/{familyId}/{personId}/{allPaths=**} {
      // Allow read: authenticated users who are family members
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/families/$(familyId));
      
      // Allow write: authenticated users who are family members
      allow write: if request.auth != null
        && exists(/databases/$(database)/documents/families/$(familyId))
        && request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }

    // Stories: oral history audio files
    // Path: stories/{familyId}/{personId}/{filename}
    match /stories/{familyId}/{personId}/{allPaths=**} {
      // Allow read: authenticated users who are family members
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/families/$(familyId));
      
      // Allow write: authenticated users who are family members
      allow write: if request.auth != null
        && exists(/databases/$(database)/documents/families/$(familyId))
        && request.resource.size < 50 * 1024 * 1024; // Max 50MB for audio
    }

    // Profile pictures
    // Path: profiles/{familyId}/{filename}
    match /profiles/{familyId}/{allPaths=**} {
      // Allow read: authenticated users who are family members
      allow read: if request.auth != null
        && exists(/databases/$(database)/documents/families/$(familyId));
      
      // Allow write: authenticated users who are family members
      allow write: if request.auth != null
        && exists(/databases/$(database)/documents/families/$(familyId))
        && request.resource.size < 5 * 1024 * 1024; // Max 5MB for profile pictures
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

